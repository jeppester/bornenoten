card-container()
  padding $base-spacing

card-row()
  display flex
  margin-bottom ($base-spacing / 2)

  &:last-child
    margin-bottom 0

card()
  display block
  box-shadow $base-box-shadow
  border-radius $base-border-radius
  overflow hidden
  background-color $brand-color-light
  margin-right ($base-spacing / 2)
  position relative

  &:last-child
    margin-right 0

overlay()
  position absolute
  top 0
  bottom 0
  left 0
  right 0
