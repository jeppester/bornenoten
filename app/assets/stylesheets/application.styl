//= require font-awesome
@import 'variables'
@import 'mixins'
@import 'children/index'
@import 'children/show'
@import 'children/notes'

html
  height 100%

body
  margin 0
  display flex
  flex-direction column
  height 100%
  max-height 100%
  font-size 20px
  font-family Arial, sans-serif
  color $base-color

h1
  font-size 180%
  font-weight 400

h2
  font-size 140%
  font-weight 400

a
  text-decoration none
  color $brand-color

.top-menu
  background-color $brand-color
  box-shadow $base-box-shadow
  z-index 1

.top-menu__link
  display inline-block
  padding ($base-spacing / 2) $base-spacing
  color white

.main-container
  flex 1 1 100%
  overflow-y scroll
  background-color $brand-color-dark
