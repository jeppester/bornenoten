.portrait-input
  position relative
  width 100%
  height 100%

.portrait-input__image
  display block
  width 100%
  padding-top 100%
  height auto
  border-radius $base-border-radius
  background-position center
  background-size cover

.portrait-input__field
  display none

.portrait-input__action
  border 1px solid $spacer-color
  padding ($base-spacing / 5) ($base-spacing / 3)
  border-radius ($base-border-radius)
  color $brand-color
  font inherit
  background $brand-color-lighter
  box-shadow 0 10px $base-box-shadow
  position absolute
  top 0

.portrait-input__action--change
  left 0
  border-top-right-radius 0
  border-bottom-left-radius 0

.portrait-input__action--remove
  right 0
  border-top-left-radius 0
  border-bottom-right-radius 0

.portrait-input__action--disabled
  display none
