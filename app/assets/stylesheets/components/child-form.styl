.child-form
  background-color $brand-color-light
  height 100%
  box-sizing border-box
  display flex

.child-form__fields
  flex 1 1
  overflow-y scroll

.child-form__actions
  flex 0 0 auto
  font-size 80%
  line-height ($base-spacing * .5)
  display flex
  flex-direction column
  justify-content space-between
  border-left 1px solid $spacer-color
  box-shadow 0px 10px $base-box-shadow
  > a
  > button
    padding ($base-spacing / 2) ($base-spacing / 2)
    color $brand-color
    font inherit
    background transparent
    border 0

.child-form__row
  display flex
  flex-direction row
  flex 0 0 auto
  padding $base-spacing
  > :not(:last-child)
    margin-right $base-spacing

.child-form__column
  flex 1 1 auto
  width 1%
  padding ($base-spacing / 5) 0
  > *:last-child
    margin-bottom 0

.child-form__spacer-v
  flex 0 0 1px
  background-color $spacer-color
  margin ($base-spacing * .5) 0
  margin-right $base-spacing

.child-form__spacer-h
  height 1px
  background-color $spacer-color
  margin 0 ($base-spacing * 1.5)

.child-form__column--image
  flex 0 0 256px
  padding 0
  position relative

.child-form__column--goals
  display flex
  flex-direction column

.child-form__field-title
  font-size 70%
  text-transform uppercase
  margin-top 0
  margin-bottom ($base-spacing * .15)

.child-form__field
  field()
  margin 0 ($base-spacing / -4 - 1px) ($base-spacing / 2)

.child-form__field--goals
  flex 1 1 auto
  resize none
